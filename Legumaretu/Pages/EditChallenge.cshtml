@page "{id}"
@model Legumaretu.Pages.EditChallengeModel

@{
	ViewData["Title"] = "Modifică provocarea";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="editchallenge">
	<h2>Modifică provocarea</h2>
	<form method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Challenge.Id" />

		<label asp-for="Challenge.Name">Numele</label>
		<input asp-for="Challenge.Name"/>
		<span asp-validation-for="Challenge.Name" class="text-danger"></span>

		<label asp-for="Challenge.Description">Desciere</label>
		<input asp-for="Challenge.Description"/>
		<span asp-validation-for="Challenge.Description" class="text-danger"></span>

		<button type="submit">Modifică</button>
	</form>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
