@page
@model Legumaretu.Pages.RecipeModel

<section class="recipe">
    <img src="@Model.Recipe.ImgLink"/>
    <h2>@Model.Recipe.Name
        @if (Model.Recipe.Official)
        {
            <span class="fa-solid fa-circle-check" title="Rețetă adăugată de moderatori"></span>
        }
    </h2>
    <div>
        <p>
            @for (int i = 0; i < Model.Recipe.Stars; i++)
            {
                <i class="fa-solid fa-star"></i>
            }
        </p>
        <p>@(Model.Recipe.Stars * 20) p</p>
    </div>
    <p>@Model.Recipe.Description</p>
</section>