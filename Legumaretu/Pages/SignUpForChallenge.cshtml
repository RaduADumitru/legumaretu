@page
@model Legumaretu.Pages.SignUpForChallengeModel

@{
    ViewData["Title"] = "SignUpForChallenge";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>SignUpForChallenge</h1>

<h4>ChallengeProgress</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
	        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	        <div class="form-group">
                <label>Challenge</label>
		        <select asp-for="ChallengeProgress.ChallengeId" asp-items="@Model.Challenges"></select><br/>
	        </div>
            <div class="form-group">
                <input type="submit" value="Sign up for challenge" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
