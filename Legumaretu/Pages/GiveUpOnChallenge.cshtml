@page "{id}"
@model Legumaretu.Pages.GiveUpOnChallengeModel

@{
    ViewData["Title"] = "GiveUpOnChallenge";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>GiveUpOnChallenge</h1>

<h3>Are you sure you want to give up on this challenge?</h3>
<div>
    <h4>Challenge Progress</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChallengeProgress.Challenge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChallengeProgress.Challenge.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ChallengeProgress.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
