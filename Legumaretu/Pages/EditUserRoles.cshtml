@page "{userId}"
@model Legumaretu.Pages.EditUserRolesModel
@using Microsoft.AspNetCore.Identity
@using Legumaretu.Models
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

<section class="editusers">
	<form method="post">
		<div>
			<label asp-for="UserId">ID-ul utilizatorului</label>
			<input asp-for="UserId" readonly />
		</div>
		<div>
			<label>Selectează rolurile</label>
			@foreach (var role in Model.AllRoles)
			{
				<div>
					<input type="radio" id="@role.Name" name="selectedRoles"
						   value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
					<label for="@role.Name">@role.Name</label>
				</div>
			}
		</div>
		<button type="submit">Modifică rolurile</button>
	</form>
</section>