@page
@model Legumaretu.Pages.AddRecipeModel
@{
}

<section class="addrecipe">
	<h2>Adaugă o rețetă</h2>
	<form method="post">
		<label>Nume</label>
		<input asp-for="Recipe.Name"/>
		<span asp-validation-for="Recipe.Name" class="text-danger"></span>

		<label>Descriere</label>
		<textarea asp-for="Recipe.Description"></textarea>
		<span asp-validation-for="Recipe.Description" class="text-danger"></span>

		<label>Nivel de dificultate (1-5)</label>
		<input type="number" min="1" max="5" value="1" asp-for="Recipe.Stars"/>
		<span asp-validation-for="Recipe.Stars" class="text-danger"></span>

		<input type="file" accept="image/*" asp-for="@Model.Image" />
		<span asp-validation-for="@Model.Image" class="text-danger"></span>

		<button>Adaugă</button>
	</form>
</section>